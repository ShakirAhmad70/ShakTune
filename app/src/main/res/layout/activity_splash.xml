<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondaryBgColor"
    tools:context=".activities.splashes.SplashActivity">

        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/small_logo"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_bg"
            android:contentDescription="@string/this_is_the_splash_image"
            />

        <TextView
            android:id="@+id/splash_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/splash_text"
            android:textSize="30sp"
            android:letterSpacing="0.1"
            android:visibility="gone"
            android:layout_below="@id/splash_image"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color"
            />

</RelativeLayout>